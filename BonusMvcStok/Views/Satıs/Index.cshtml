@using BonusMvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList<tblsatislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>MÜSTERİ</th>
        <th>FİYAT</th>
        <th>TARİH</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.tblurunler.ad </td>
            <td>@x.tblpersonel.ad @x.tblpersonel.soyad</td>
            <td>@x.tblmusteri.ad @x.tblmusteri.soyad</td>
            <td>@x.fiyat</td>
            <td>@x.tarih</td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Satıs/YeniSatis" class="btn btn-primary">Yeni Satıs</a>